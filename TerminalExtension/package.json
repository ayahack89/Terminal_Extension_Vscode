{
  "name": "termino",
  "displayName": "Termino",
  "description": "One keystroke terminal shortcuts, no palettes, instant feedback, separate cookbook view.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onView:termino.launcherView",
    "onCommand:termino.editShortcuts",
    "onCommand:termino.reloadShortcuts",
    "onCommand:termino.quickLaunch"
  ],
  "main": "./extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Termino",
      "properties": {
        "termino.shortcutsPath": {
          "type": "string",
          "default": ".vscode/termino.shortcuts.json",
          "description": "Filesystem path (relative to workspace) for user-defined Termino shortcuts JSON."
        },
        "termino.shortcuts": {
          "type": "object",
          "description": "Default shortcut mappings. These are overridden by shortcuts in your user file.",
          "default": {
            "a": { "cmd": "dir", "desc": "List files & folders (Windows)." },
            "b": { "cmd": "cls", "desc": "Clear the console (Windows)." },
            "c": { "cmd": "pwd", "desc": "Print current working directory." },
            "d": { "cmd": "cd..", "desc": "Change directory (to home if no args)." },
            "e": { "cmd": "tree", "desc": "Show folder hierarchy (Windows)." },
            "f": { "cmd": "flutter doctor", "desc": "Verify Flutter setup health." },
            "g": { "cmd": "flutter pub get", "desc": "Fetch Flutter & Dart dependencies." },
            "h": { "cmd": "flutter pub upgrade", "desc": "Upgrade all packages to latest compatible." },
            "i": { "cmd": "flutter run", "desc": "Build & launch app on connected device." },
            "j": { "cmd": "flutter build apk", "desc": "Produce Android APK build." },
            "k": { "cmd": "dart analyze", "desc": "Statically analyze Dart code for issues." },
            "l": { "cmd": "dart format .", "desc": "Auto-format all Dart files in project." },
            "m": { "cmd": "git status", "desc": "Show Git repo current status." },
            "n": { "cmd": "git add .", "desc": "Stage all modified & new files." },
            "o": { "cmd": "git commit -m \"\"", "desc": "Commit staged changes with message." },
            "p": { "cmd": "git pull", "desc": "Fetch & merge upstream changes." },
            "q": { "cmd": "git push", "desc": "Push local commits to remote." },
            "r": { "cmd": "git log --oneline --graph", "desc": "View compact commit history graph." },
            "s": { "cmd": "firebase login", "desc": "Authenticate Firebase CLI." },
            "t": { "cmd": "firebase emulators:start", "desc": "Run local Firebase emulators." },
            "u": { "cmd": "firebase deploy", "desc": "Deploy to Firebase (hosting, functions, etc.)." },
            "v": { "cmd": "ipconfig", "desc": "Show network interfaces & IPs (Windows)." },
            "w": { "cmd": "ping -n 4 google.com", "desc": "Ping Google 4 times (Windows syntax)." },
            "x": { "cmd": "tracert google.com", "desc": "Trace route to Google (Windows)." },
            "y": { "cmd": "netstat -ano", "desc": "List all network connections with PIDs." },
            "z": { "cmd": "tasklist", "desc": "List running processes & their PIDs (Windows)." }
          }
        }
      }
    },
    "commands": [
      {
        "command": "termino.editShortcuts",
        "title": "Termino: Edit Shortcuts File"
      },
      {
        "command": "termino.reloadShortcuts",
        "title": "Termino: Reload Shortcuts"
      },
      {
        "command": "termino.quickLaunch",
        "title": "Termino: Quick Launch"
      },
      {
        "command": "workbench.view.extension.termino-launcher-view",
        "title": "Termino: Toggle Launcher"
      }
    ],
    "viewsContainers": {
      "panel": [
        {
          "id": "termino",
          "title": "Termino",
          "icon": "resources/icon.png"
        }
      ]
    },
    "views": {
      "termino": [
        {
          "id": "termino.launcherView",
          "name": "Launcher"
        }
      ]
    },
    "menus": {
      "commandPalette": [
        { "command": "termino.editShortcuts" },
        { "command": "termino.reloadShortcuts" },
        { "command": "termino.quickLaunch" },
        { "command": "workbench.view.extension.termino-launcher-view", "when": "true" }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test",
    "watch": "tsc -w -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "eslint": "^9.25.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
